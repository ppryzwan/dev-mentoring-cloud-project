{
    "packages": [
      "pre-commit@latest",
      "commitizen@latest",
      "git@latest",
      "go-task@latest",
      // "terraform@1.7.2",
      // "google-cloud-sdk@latest",
      "poetry@latest",
      "python@3.11.9",
      // "tflint@latest",
      // "tfsec@latest"
    ],
    "shell": {
      "init_hook": [
        "pre-commit install --hook-type commit-msg",
        "eval $(cat $DEVBOX_PROJECT_ROOT/.env | sed 's/^/export /')"
      ]
    },
    "env":{
      "GOOGLE_APPLICATION_CREDENTIALS": "${DEVBOX_PROJECT_ROOT}/secrets/functions_credentials_file.json"
    }
  }
